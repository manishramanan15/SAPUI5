<core:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"   
	xmlns:l="sap.ui.layout"
	controllerName="sap.ui.fame.m.view.FameLogin" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Login">
		<content>
			 <l:VerticalLayout
			    class="sapUiContentPadding"
			    width="100%">
			    <l:content>
			
			      <Label text="Email" />
			      <Input
			        id="username"
			        type="Text"
			        class="sapUiSmallMarginBottom"
			        placeholder="Enter Email Here ..." />
			
			      <Label text="Password" />
			      <Input
			        id="password"
        			type="Password"
        			placeholder="Enter password ..." />
			    </l:content>
			  </l:VerticalLayout>
		</content>
		
		 <footer>
      <Toolbar>
        <Button text="Login" type="Emphasized" press="authenticate" />
      </Toolbar>
    </footer>
		
	</Page>
</core:View>